#!/bin/sh -e

export VERSION=`cat apistar/__init__.py | grep __version__ | sed "s/__version__ = //" | sed "s/'//g"`

if ! command -v "pipenv run twine" &>/dev/null ; then
    echo "Unable to find the 'twine' command."
    echo "Install from PyPI, using 'pipenv run pip install twine'."
    exit 1
fi

find apistar -type f -name "*.py[co]" -delete
find apistar -type d -name __pycache__ -delete

pipenv run python setup.py sdist
pipenv run twine upload dist/*

echo "You probably want to also tag the version now:"
echo "git tag -a ${VERSION} -m 'version ${VERSION}'"
echo "git push --tags"

rm -r dist
